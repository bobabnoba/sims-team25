<Window x:Class="ZdravoKorporacija.Stranice.PacijentCRUD.Zakazi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoKorporacija.Stranice.PacijentCRUD"
        mc:Ignorable="d"
        Title="Zdravo korporacija" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="221*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Label Content="Zakaži pregled" Grid.Row="1" Grid.ColumnSpan="2" FontSize="28" Grid.Column="1" HorizontalAlignment="Center" Margin="49,6,57,5" Width="200" Height="55"/>
        <TextBlock Text="Prioritet:" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" FontSize="18" Margin="10,10,0,10"/>
        <TextBlock Text="Datum:" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" FontSize="18" Margin="10,10,0,10"/>
        <TextBlock Text="Vreme:" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" FontSize="18" Margin="10,10,0,10"/>
        <TextBlock Text="Lekar:" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" FontSize="18" Margin="10,10,0,10"/>

        <RadioButton Content="Lekar" Grid.Row="3" Grid.Column="2" Margin="0,17,131,23" Checked="LekarChecked"/>
        <RadioButton Content="Vreme" Grid.Row="3" Grid.Column="2" Margin="91,17,60,23" Checked="VremeChecked"/>
        <DatePicker  x:Name ="date" Grid.Row="4" Grid.Column="2" Margin="0,10,40,21"  SelectedDateChanged="date_changed"/>
        <ComboBox x:Name="time" Grid.Row="5" Grid.Column="2" Margin="0,10,40,18" SelectionChanged="time_changed"/>
        <ComboBox x:Name="ljekar" Grid.Row="6" Grid.Column="2" Margin="0,5,40,22" SelectionChanged="ljekar_changed">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="Ime"/>
                                <Binding Path="Prezime"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Content="Odustani" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Margin="32,8,173,9" Click="odustani" BorderBrush="#FFDDDDDD"/>
        <Button Content="Potvrdi" Grid.Row="8" Grid.Column="2" Margin="69,8,38,9" Click="potvrdi" BorderBrush="#FFDDDDDD"/>
    </Grid>
</Window>
