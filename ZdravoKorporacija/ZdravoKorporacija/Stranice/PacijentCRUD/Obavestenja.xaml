<Page x:Class="ZdravoKorporacija.Stranice.PacijentCRUD.Obavestenja"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZdravoKorporacija.Stranice.PacijentCRUD"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="630"
      Title="Obavestenja">

    <Grid>
        <DataGrid x:Name="dgObavjestenja"  AutoGenerateColumns="false" CanUserAddRows="False" Margin="33,38,33,40" MinRowHeight="33" SelectionMode="Single" GridLinesVisibility="Horizontal">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Datum" Binding="{Binding Path = Datum}" Width="*"/>
                <DataGridTextColumn Header="Tip" Binding="{Binding Path=Tip}" Width="*"/>
            <DataGridTextColumn Header="Sadržaj" Binding="{Binding Path=Sadrzaj}" Width="*"/>
        </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
